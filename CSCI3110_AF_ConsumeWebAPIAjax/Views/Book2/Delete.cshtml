@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4 id="bookHeading">Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10" id="bookId">
        </dd>
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10" id="bookTitle">
        </dd>
        <dt class="col-sm-2">
            Edition
        </dt>
        <dd class="col-sm-10" id="bookEdition">
        </dd>
        <dt class="col-sm-2">
            Publication Year
        </dt>
        <dd class="col-sm-10" id="bookPublicationYear">
        </dd>
    </dl>

    <form asp-action="Delete" id="formBookDelete">
        <input id="id" name="id" value="" type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="Book">Back to List</a>
    </form>
</div>

@section Scripts {
    <script src="~/js/delete.js" type="module" defer></script>
}
