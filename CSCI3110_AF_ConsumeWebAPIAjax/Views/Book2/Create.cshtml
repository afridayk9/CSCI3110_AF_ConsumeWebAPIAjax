@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="formCreateBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Title" class="control-label">Title</label>
                <input name="Title" id="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Edition" class="control-label">Edition</label>
                <input name="Edition" id="Edition" class="form-control" />
            </div>
            <div class="form-group">
                <label for="PublicationYear" class="control-label">
                    Publication Year
                </label>
                <input name="PublicationYear" id="PublicationYear"
                       class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/bookCreate.js" type="module" defer></script>
}

