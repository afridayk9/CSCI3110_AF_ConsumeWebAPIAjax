@model Book

<div class="modal fade" id="createBookModal" tabindex="-1" role="dialog"
     aria-labelledby="createBookModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div id="mainContent" class="modal-content">
            <form id="createBookForm" asp-action="Create">

                <div class="modal-header">
                    <h5 class="modalTitle" id="createBookModalTitle">Create Book</h5>
                    <button type="button" class="btn-close"
                            data-bs-dismiss="modal" aria-label="Close">
                    </button>
                </div>

                <div class="modal-body">
                    <partial name="_CreateBookForm" model="@Model" />
                </div>    
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="reset" class="btn btn-secondary">Clear</button>
                </div>
            </form>
        </div>
    </div>
</div>
